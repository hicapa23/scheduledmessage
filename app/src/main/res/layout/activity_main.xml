<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/messageInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/escribe_tu_mensaje"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/contactButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/elegir_contacto"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="5dp" />

        <Button
            android:id="@+id/timeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/seleccionar_fecha_y_hora"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="5dp" />

        <Button
            android:id="@+id/scheduleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_programar"
            android:padding="12dp"
            android:textSize="16sp"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/messageListTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mensajes_programados"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:id="@+id/messageListLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="?android:attr/dividerHorizontal"
            android:showDividers="middle"
            android:paddingBottom="32dp" />

    </LinearLayout>
</ScrollView>



